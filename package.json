{
  "name": "popcorn",
  "version": "0.1.0",
  "private": true,
  "description": "Autonomous visual testing for AI-generated frontend code",
  "license": "MIT",
  "author": "Tim Nice",
  "repository": {
    "type": "git",
    "url": "https://github.com/timothynice/popcorn.git"
  },
  "keywords": [
    "chrome-extension",
    "testing",
    "ai",
    "claude",
    "visual-testing",
    "ui-testing",
    "automation",
    "developer-tools"
  ],
  "type": "module",
  "bin": {
    "popcorn": "./hook/dist/cli.js"
  },
  "workspaces": [
    "shared",
    "extension",
    "hook"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "start": "npm run start --workspace=extension",
    "test": "vitest run",
    "test:watch": "vitest",
    "docs": "typedoc --entryPointStrategy packages shared extension hook"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "vitest": "^2.0.0",
    "typedoc": "^0.26.0",
    "@types/chrome": "^0.0.268"
  }
}
